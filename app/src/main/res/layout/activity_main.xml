    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTemperatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Temperatura: " />

        <TextView
            android:id="@+id/txtRPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="RPM: " />

        <TextView
            android:id="@+id/txtVelocidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Velicidade: " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBorboleta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Borboleta: " />

        <TextView
            android:id="@+id/txtFluxoAr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Fluxo do Ar: " />

    </LinearLayout>

    <com.cardiomood.android.controls.gauge.SpeedometerGauge
        android:id="@+id/speedometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" />

    <!--
    <com.cardiomood.android.controls.gauge.BatteryIndicatorGauge
        android:id="@+id/batteryindicator"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_below="@id/speedometer"
        android:padding="8dp" />

    <com.cardiomood.android.controls.progress.CircularProgressBar
        android:id="@+id/circularprogress"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_below="@id/batteryindicator"
        android:padding="8dp" />
    -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log:" />

    </ScrollView>

</LinearLayout>
